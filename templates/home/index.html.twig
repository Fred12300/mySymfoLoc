{% extends 'base.html.twig' %}

{% block body %}
{# <img src="back.jpg" alt="back.jpg" class="img-fluid"> #}

<div class="back">
    {% if lastTools %}
        <h2 class="text-light fw-bold" >Derniers outils ajout√©s :</h2>
        <div class="container">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% set first = true %}
                    {% for last in lastTools %}
                    <div class="carousel-item {% if first == true %}active{% endif %}">
                        <a href="/profile/borrow/{{ last.id }}" class="d-flex flex-column align-items-center">
                            <img src="/uploads/{{ last.mainPic }}" class="d-block carousel-img" alt="...">
                            <h3 class="fw-bolder text-light">{{ last.name }}</h3>
                        </a>
                    </div>
                    {% set first = false %}
                    {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
