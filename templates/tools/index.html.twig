{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex flex-wrap justify-content-center gap-2">
        {% for tool in tools %}
            <div class="card m-2 shadow">
                <a class="d-flex align-items-center gap-2 justify-content-end m-2" href="/categories/{{tool.category.id}}">
                    {{ tool.category.name }}
                    <img src="/{{ tool.category.icon }}" alt="" class="icon">
                </a>
                <img src="/uploads/{{ asset(tool.mainPic) }}" alt="{{ tool.mainPic }}" class="card-img-top">
                <div class="card-body bg-tertiary">
                <h2 class="card-title">{{ tool.name }}</h2>
                    <small class="badge text-end bg-info">Propriétaire : {{ tool.owner.firstName }}</small>
                    <div class="container bg-secondary text-light rounded p-3 my-2">
                        <small>Description : </small>
                        <div class="card-text">{{ tool.description}}</div>
                    </div>
                <a href="profile/borrow/{{ tool.id }}" class="btn btn-primary m-4 w-50">Réserver</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
