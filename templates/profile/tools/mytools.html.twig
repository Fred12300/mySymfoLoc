{% extends "base.html.twig" %}

{% block body %}

<div class="container">
    <h1 class="my-3">Mes Outils</h1>
    {% for tool in ownedTools %}
        <div class ="border border-primary m-2 rounded d-flex justify-content-between align-items-center">
            <div>
                <a href="/profile/borrow/{{ tool.id }}" class="mx-4">{{ tool.name }}</a>
                <a href="/profile/borrow/{{ tool.id }}"><img class="icon" src="/uploads/{{ tool.mainPic }}" alt=""></a>
            </div>
            <a href="edit/{{ tool.id }}" class='btn btn-sm btn-secondary m-2' >edit</a>
        </div>
    {% endfor %}
</div>
{% endblock %}